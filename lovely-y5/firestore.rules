rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Funciones comunes para el proyecto Lovely Y5 - Tienda Web
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.rol == 'admin' || request.auth.token.role == 'admin');
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isWorker() {
      return request.auth != null && 
        (request.auth.token.rol == 'trabajador' || request.auth.token.role == 'trabajador');
    }

    function isCustomer() {
      return request.auth != null && 
        (request.auth.token.rol == 'cliente' || request.auth.token.role == 'cliente');
    }

    // Productos Lovely Y5: lectura pública, escritura solo admin y trabajadores
    // Validaciones específicas para códigos LVL5_
    match /products/{productId} {
      allow read: if true;
      allow create, update: if (isAdmin() || isWorker())
        && request.resource.data.nombre is string
        && request.resource.data.codigo is string
        && request.resource.data.codigo.matches('^LVL5_.*')
        && request.resource.data.precio is number
        && request.resource.data.stock is int
        && request.resource.data.tipo is string
        && request.resource.data.marca is string;
      allow delete: if isAdmin();
    }

    // Pedidos/Orders: usuarios autenticados pueden crear pedidos para sí mismos.
    // Los invitados pueden crear pedidos con customer.id == "guest".
    // Lectura: admin, trabajador o propietario del pedido.
    match /orders/{orderId} {
      allow create: if (
        isAuthenticated() && 
        (request.resource.data.userId == request.auth.token.rut ||
         request.resource.data.customer.id == request.auth.token.rut)
      ) || (
        request.auth == null && 
        (request.resource.data.customer.id == 'guest' ||
         request.resource.data.userId == 'guest')
      )
      // Validaciones para estructura de pedidos con nueva info de customer
      && request.resource.data.items is list
      && request.resource.data.total is number
      && request.resource.data.status is string
      && request.resource.data.customer is map
      && request.resource.data.customer.email is string
      && request.resource.data.customer.telefono is string
      && request.resource.data.customer.direccion is map
      && request.resource.data.customer.direccion.calle is string
      && request.resource.data.customer.direccion.numero is string
      && request.resource.data.customer.direccion.comuna is string
      && request.resource.data.customer.direccion.region is string;

      allow read: if isAdmin()
        || isWorker()
        || (isAuthenticated() && 
           (resource.data.userId == request.auth.token.rut ||
            resource.data.customer.id == request.auth.token.rut))
        || (request.auth == null && 
           (resource.data.customer.id == 'guest' ||
            resource.data.userId == 'guest'));

      // Actualizaciones: admin puede todo, trabajador puede cambiar status
      allow update: if isAdmin() || 
        (isWorker() && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']));
      
      allow delete: if isAdmin();
    }

    // Usuarios: cada usuario puede leer/editar su propio documento usando RUT como UID
    match /users/{rut} {
      // Permitir creación pública de clientes (cualquiera puede registrarse como cliente)
      allow create: if request.resource.data.rol == 'cliente'
        && request.resource.data.rut is string
        && request.resource.data.primerNombre is string
        && request.resource.data.apellidos is string  
        && request.resource.data.correo is string
        && request.resource.data.activo == true;
      
      // Lectura: permitir lectura básica para autenticación
      allow read: if true;
      
      // Actualización: solo con datos válidos
      allow update: if request.resource.data.rut == resource.data.rut;
      
      allow delete: if isAdmin();
    }

    // Carritos: cada usuario puede gestionar su propio carrito usando RUT como ID
    match /carts/{rut} {
      allow read, write: if isAuthenticated() && request.auth.token.rut == rut;
      allow read: if isAdmin() || isWorker();
      allow delete: if isAdmin();
    }

    // Contactos: formulario público puede crear, solo admin y trabajadores pueden leer/gestionar.
    match /contacts/{contactId} {
      allow create: if
        request.resource.data.nombre is string
        && request.resource.data.email is string
        && request.resource.data.mensaje is string
        && request.resource.data.createdAt is timestamp;

      allow read: if isAdmin() || isWorker();
      
      allow update: if isAdmin() || isWorker();
      
      allow delete: if isAdmin();
    }

    // Categorías de productos: lectura pública, escritura solo admin y trabajadores
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin() || isWorker();
    }

    // Configuración de la tienda: lectura pública, escritura solo admin
    match /settings/{settingId} {
      allow read: if true;  // Configuración pública como horarios, info de contacto
      allow write: if isAdmin();
    }

    // Carritos de compra: usuarios pueden gestionar su propio carrito
    match /carts/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Reviews/Valoraciones: lectura pública, escritura para usuarios autenticados
    match /reviews/{reviewId} {
      // Permitir lectura a todos
      allow read: if true;
      
      // Permitir creación solo a usuarios autenticados con RUT válido
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && validateReviewData(request.resource.data);
      
      // Permitir actualización solo al propietario de la review
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid
        && validateReviewData(request.resource.data);
      
      // Permitir eliminación solo al propietario o administrador
      allow delete: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Función para validar estructura de reviews
    function validateReviewData(data) {
      return data.keys().hasAll(['productCode', 'userId', 'userName', 'rating', 'comment'])
        && data.rating is number
        && data.rating >= 1 
        && data.rating <= 5
        && data.comment is string
        && data.comment.size() > 0
        && data.productCode is string
        && data.userId is string
        && data.userName is string;
    }

    // Fallback: restringir todo lo demás por seguridad
    match /{document=**} {
      allow read, write: if false;
    }
  }
}